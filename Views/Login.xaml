<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dpozoExamen.Views.Login"
             Title="">
    <VerticalStackLayout>
        <Label Text="Login"
                   HorizontalOptions="Center"
                   FontSize="20"
                   TextColor="Red" />

        <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"
               HorizontalOptions="Center" 
               WidthRequest="250"/>

        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*" >
            <Label Text="Usuario" Grid.Row="0" Grid.Column="0" />
            <Entry x:Name="UsernameEntry" Grid.Row="0" Grid.Column="1" />

            <Label Text="Contraseña" Grid.Row="1" Grid.Column="0" />
            <Entry x:Name="PasswordEntry" IsPassword="True" Grid.Row="1" Grid.Column="1" />
        </Grid>

        <Button Text="Iniciar Sesión"
                    Clicked="Button_Clicked"
                    HorizontalOptions="Center"
                    />
    </VerticalStackLayout>
</ContentPage>